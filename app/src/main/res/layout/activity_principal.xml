<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.view.PrincipalActivity">

    <LinearLayout
        android:id="@+id/header_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@color/verde"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Futebol"
            android:textSize="12sp"
            android:textColor="@color/yellow"
            android:layout_margin="10dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tituloprincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Series"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/filmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filmes"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/minhalista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minha Lista"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textStyle="bold">

        </TextView>


        <TextView
            android:id="@+id/sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecycleFilmes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header_principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/cinza">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>